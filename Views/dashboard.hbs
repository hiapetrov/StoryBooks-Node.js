<h6>Dashboard </h6>
<h3>Welcome {{name}}</h3> 
<p>Here are your stories</p>
{{#if stories}}
    <table class="stripped">
        <thead>
            <tr>
                <th>Tittle</th>
                <th>Date</th>
                <th>Status</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr class="table">
                    <td><h5><a href="/stories/{{_id}}">{{title}}</a></h5></td>
                    <td>{{formatDate createdAt 'DD MMMM YYYY h:mm'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td><a href="/stories/edit/{{_id}}" method="GET" class="btn-small green">
                    <i class="fas fa-edit"></i></a></td>
                    <td><a href="/stories/edit/delete/{{_id}}" class="btn-small red accent-4">
                    
                    <i class="fas fa-trash"></i></a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not created any stories yet.</p>
{{/if}}